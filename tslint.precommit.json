{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "arrow-return-shorthand": false,
    "await-promise": [true, "Thenable"],
    "ban-comma-operator": true,
    "curly": {
      "options": "ignore-same-line"
    },
    "cyclomatic-complexity": true,
    "function-constructor": true,
    "interface-over-type-literal": false,
    "interface-name": false,
    "max-file-line-count": [true, 300],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "protected-static-field",
          "private-static-field",
          "public-static-field",
          "protected-static-method",
          "private-static-method",
          "public-static-method",
          "protected-instance-field",
          "private-instance-field",
          "public-instance-field",
          "constructor",
          "protected-instance-method",
          "private-instance-method",
          "public-instance-method"
        ]
      }
    ],
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": {
      "options": "check-parameters"
    },
    "no-for-in-array": true,
    "no-floating-promises": true,
    "no-angle-bracket-type-assertion": true,
    "no-empty-interface": false,
    "no-implicit-dependencies": {
      "options": ["dev"]
    },
    "no-invalid-template-strings": true,
    "no-object-literal-type-assertion": [true, { "allow-arguments": true }],
    "no-parameter-reassignment": true,
    "no-shadowed-variable": {
      "options": {
        "import": false
      }
    },
    "no-tautology-expression": true,
    "no-unbound-method": [
      true,
      { "ignore-static": true, "allow-typeof": true }
    ],
    "no-unused-expression": {
      "options": [
        "allow-fast-null-checks",
        "allow-new",
        "allow-tagged-template"
      ]
    },
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": [
      true,
      "ignore-case",
      "locale-compare"
    ],
    "prefer-while": true,
    "static-this": true,
    "triple-equals": {
      "options": ["allow-null-check", "allow-undefined-check"]
    },
    "variable-name": {
      "options": ["allow-leading-underscore", "ban-keywords", "check-format", "require-const-for-all-caps"]
    }
  },
  "rulesDirectory": []
}
